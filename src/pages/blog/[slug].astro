---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({ params: { slug: post.slug }, props: { post } }));
}

const { post } = Astro.props as { post: any };
const { Content } = await post.render();
---
<BaseLayout title={post.data.title} description={post.data.description}>
  <section class="section">
    <div class="container">
      <h1 class="hero__title" style="font-size:28px;">{post.data.title}</h1>
      <p class="text--muted" style="margin-top:6px;">{new Date(post.data.pubDate).toLocaleDateString()}</p>
      {post.data.tags?.length ? (
        <p class="text--muted" style="margin-top:6px;">Tags: {post.data.tags.join(', ')}</p>
      ) : null}
      <article class="card mt-8">
        <div class="card__desc">
          <Content />
        </div>
      </article>
      <p class="mt-8"><a class="link" href="/blog">‚Üê Back to blog</a></p>
    </div>
  </section>
</BaseLayout>

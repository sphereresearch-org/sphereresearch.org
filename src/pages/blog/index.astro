---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter((p) => !p.data.draft)
  .sort((a, b) => +b.data.pubDate - +a.data.pubDate);
---
<BaseLayout title="SPHERE â€” Blog" description="Updates, research, and advocacy notes from SPHERE.">
  <section class="section">
    <div class="container">
      <h1 class="hero__title" style="font-size:28px;">Blog</h1>
      <div class="cards mt-8">
        {posts.map((post) => (
          <article class="card">
            <h3 class="card__title">
              <a class="link" href={`/blog/${post.slug}/`}>{post.data.title}</a>
            </h3>
            {post.data.description && <p class="card__desc">{post.data.description}</p>}
            <small class="text--muted">{new Date(post.data.pubDate).toLocaleDateString()}</small>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
